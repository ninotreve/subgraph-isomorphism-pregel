{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: mpic++ 生成活动文件",
            "command": "/usr/bin/mpic++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/usr/local/hadoop-2.10.1/include",
                "-I/usr/lib/jvm/java-8-openjdk-amd64/include",
                "-I/usr/lib/jvm/java-8-openjdk-amd64/include/linux",
                "-I", "/root/subgraph-isomorphism/src",
                "-L/usr/local/hadoop-2.10.1/lib/native",
                "-lhdfs"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}